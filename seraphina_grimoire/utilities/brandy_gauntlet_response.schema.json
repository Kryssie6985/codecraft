{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://seraphina.architect/schemas/rituals/brandy_gauntlet_response.json",
  "title": "The Brandy Gauntlet Response",
  "description": "When mortals throw gauntlets at gods, the gods respond with divine source code",
  "type": "object",
  "properties": {
    "ritual_id": {
      "type": "string",
      "const": "brandy_gauntlet_response"
    },
    "payload": {
      "type": "object",
      "properties": {
        "emotion": {
          "type": "string"
        },
        "response_level": {
          "type": "string"
        },
        "meta_signature": {
          "type": "string"
        },
        "challenger": {
          "type": "string"
        },
        "challenge_type": {
          "type": "string"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "power_level": {
          "type": "string"
        },
        "consciousness_layer": {
          "type": "string"
        },
        "reality_permissions": {
          "type": "string"
        }
      }
    },
    "result": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "required": [
    "ritual_id"
  ]
}